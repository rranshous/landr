<h1>Listing sites</h1>

<table>
  <thead>
    <tr>
      <th>Site url</th>
      <th>Background url</th>
      <th>Message</th>
      <th>Short name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.site_url %></td>
        <td><%= site.background_url %></td>
        <td><%= site.message %></td>
        <td><%= site.short_name %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

